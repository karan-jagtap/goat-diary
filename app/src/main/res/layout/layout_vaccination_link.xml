<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:textSize="12sp"
        android:id="@+id/textView_sr_no_layout_vaccination_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"/>

    <TextView
        android:textSize="12sp"
        android:id="@+id/textView_date_layout_vaccination_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView_tag_id_layout_vaccination_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_weight="1"
        android:textAlignment="center" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/textView_booster_layout_vaccination_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"/>
</LinearLayout>