<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="20dp"
    android:paddingEnd="10dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:src="@drawable/logo_date" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="@string/from"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_date_add"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/et1_fdate_layout_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0.5dp"
                android:textSize="13sp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="0.6"
                android:background="@drawable/round_edittext_start"
                android:gravity="center"
                android:hint="dd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/et2_fdate_layout_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="0.6"
                android:background="@drawable/round_edittext_center"
                android:gravity="center"
                android:hint="mm"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:textSize="13sp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/et3_fdate_layout_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="0.8"
                android:background="@drawable/round_edittext_end"
                android:gravity="center"
                android:hint="yyyy"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="4"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:src="@drawable/logo_date" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="3dp"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:text="@string/to"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bg_date_add"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/et1_tdate_layout_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="0.6"
                android:background="@drawable/round_edittext_start"
                android:gravity="center"
                android:hint="dd"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/et2_tdate_layout_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="0.6"
                android:background="@drawable/round_edittext_center"
                android:gravity="center"
                android:hint="mm"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="2"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/et3_tdate_layout_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0.5dp"
                android:layout_marginTop="0.5dp"
                android:layout_marginEnd="0.5dp"
                android:textSize="13sp"
                android:layout_marginBottom="0.5dp"
                android:layout_weight="0.8"
                android:background="@drawable/round_edittext_end"
                android:gravity="center"
                android:hint="yyyy"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="4"
                android:paddingStart="5dp"
                android:paddingTop="8dp"
                android:paddingEnd="5dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/darker_gray" />

    <RadioGroup
        android:id="@+id/radioGroup_report_type_layout_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/outline_edittext_blue"
        android:checkedButton="@id/radio_detail_layout_filter"
        android:orientation="horizontal"
        android:padding="8dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:weightSum="2">

        <RadioButton
            android:id="@+id/radio_detail_layout_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/detail" />

        <RadioButton
            android:id="@+id/radio_summary_layout_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/summary" />

    </RadioGroup>
</LinearLayout>